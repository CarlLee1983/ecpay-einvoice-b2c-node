{
    "name": "ecpay-einvoice-b2c-node",
    "version": "1.0.0",
    "description": "ECPay e-Invoice API wrapper for Node.js",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "sideEffects": false,
    "files": [
        "dist",
        "README.md",
        "README_TW.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "tsc",
        "clean": "rm -rf dist",
        "prebuild": "npm run clean",
        "prepublishOnly": "npm run build && npm run test",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "format": "prettier --write \"{src,test,examples}/**/*.ts\"",
        "format:check": "prettier --check \"{src,test,examples}/**/*.ts\"",
        "typecheck": "tsc --noEmit"
    },
    "engines": {
        "node": ">=18"
    },
    "keywords": [
        "ecpay",
        "einvoice",
        "invoice",
        "taiwan",
        "b2c",
        "api",
        "sdk",
        "node",
        "typescript"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/CarlLee1983/ecpay-einvoice-b2c-node.git"
    },
    "homepage": "https://github.com/CarlLee1983/ecpay-einvoice-b2c-node#readme",
    "bugs": {
        "url": "https://github.com/CarlLee1983/ecpay-einvoice-b2c-node/issues"
    },
    "author": "Carl",
    "license": "MIT",
    "dependencies": {
        "axios": "^1.13.2",
        "zod": "^4.1.13"
    },
    "devDependencies": {
        "@types/node": "^24.10.1",
        "@vitest/coverage-v8": "^4.0.15",
        "prettier": "^3.7.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "vitest": "^4.0.15"
    },
    "packageManager": "pnpm@10.22.0"
}